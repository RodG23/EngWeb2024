extends layout 

block content 
    div.w3-card-4 
        header.w3-container.w3-purple 
            h2 Formulário Compositor
        

        form.w3-container(method="POST") 
            fieldset 
                legend Dados
                label Id
                input.w3-input.w3-round(type="text" name="_id" required) 
                label Nome
                input.w3-input.w3-round(type="text" name="nome" required) 
                label Bio
                input.w3-input.w3-round(type="text" name="bio") 
                label Data Nascimento
                input.w3-input.w3-round(type="text" name="dataNasc" required) 
                label Data Óbito
                input.w3-input.w3-round(type="text" name="dataObito" required) 
                label Período
                input.w3-input.w3-round(type="text" name="periodo") 
            
            br
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Register
        

        footer.w3-container.w3-purple 
            h5 
                span Generated by CompositoresApp - [
                a(href="/compositores") Return
                span ]
        

    